@model IEnumerable<DogBreeds.Models.DogReview>

@{
    ViewBag.Title = "Dog Reviews";
    //cast the dynamic objrct to access the Dog properties
    var dog = (DogBreeds.Models.Dog)ViewBag.Dog;
}

<h2>Dog Reviews for @dog.PetName</h2>

<table class="table">
    @foreach (var review in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => review.DateCreated)<br />
                @Html.DisplayFor(modelItem => review.Content)<br />
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Add a Reivew", "UserCreate", "DogReviews", new { dogId = dog.Id}, null)<br/>
@Html.ActionLink("Return to Dog List", "ListDogs", "Dogs")



